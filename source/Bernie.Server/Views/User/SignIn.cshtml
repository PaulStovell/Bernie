@{
    ViewData["Title"] = "Enter Passcode";
}

@section Head {
}


@using (Html.BeginForm("SignIn", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <h1>Sign in</h1>

    @Html.ValidationSummary()

    <div class="text-center">
        <div class="form-group">
            <label class="sr-only" for="usernameInput">Username</label>
            <input type="text" class="form-control passcode" id="usernameInput" name="username" placeholder="Username">
        </div>

        <div class="form-group">
            <label class="sr-only" for="passwordInput">Password</label>
            <input type="password" class="form-control passcode" id="passwordInput" name="password" placeholder="Password">
        </div>

        <hr/>

        <button type="submit" class="btn btn-success btn-lg">Sign in</button>
    </div>

}

